          <label for="restPhoneInput">Restaurant Phone Number</label>
          <input type="text" placeholder="(323) 346-2001" name="restPhone">
        </div>
        <div class="form-group">
          <label for="restHoursInput">Restaurant Hours</label>
          <input type="text" placeholder="M-F 10AM-11PM" name="restHours">
        </div>
        <div class="form-group">
          <label for="restMenuInput">Restaurant Menu Link</label>
          <input type="text" placeholder="http://www.leostacostruck.com/menu.html" name="restMenu">
        </div>
        <div class="form-group">
          <label for="tacoInput">Taco Rating (0-5)</label>
          <input type="number" placeholder="1" name="taco">
        </div>
        <div class="form-group">
